---
import { NotesItem } from "@components/cards";
import { Header } from "@components/misc";
import { BaseHead } from "@components/seo";
import { getCollection } from "astro:content";
import RootLayout from "@layouts/root-layout.astro";

const notes = (await getCollection("note")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead
			title="Notes"
			description="Rutip's Notes"
			image='/images/ogimage.png'
		/>
	</head>
	<RootLayout>
		<div
			id='navbar+title'
			class='flex flex-col w-full gap-6 max-w-xl'>
			<Header />
			<h1 class='w-full text-6xl font-medium tracking-tight mb-6'>notes</h1>

			{
				notes.map((note, i) => (
					<NotesItem
						category={note.data.category}
						content={note.data.description}
						pubDate={note.data.pubDate}
						slug={note.slug}
						index={i}
					/>
				))
			}
		</div>
	</RootLayout>
</html>
