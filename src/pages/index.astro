---
import { Header } from '@components/misc';
import { BaseHead } from '@components/seo';
import { products, SITE_TITLE, SITE_DESCRIPTION, socialLinks } from '@data/index';
import RootLayout from '@layouts/root-layout.astro';

// Fix TypeScript inference for products
type Product = { name: string; url: string; image: string };
const prods = products as Product[];
---

<!doctype html>
<html lang='en'>
<head>
    <BaseHead
            title={SITE_TITLE}
            description={SITE_DESCRIPTION}
            image='/images/ogimage.png'
    />
</head>

<RootLayout>
    <div
            id='navbar+title'
            class='flex flex-col w-full gap-6 max-w-xl lowercase'>
        <Header />
        <h1
                class="w-full text-start text-[min(12vw,72px)] font-titleboy leading-[0.9]">
            <span class="tracking-[-1px]">hi! im rutip</span><br/>
            <span class="block mt-1 text-[.6em] tracking-[-2px] text-white dark:text-white font-titleboy">
				  content creator
			    </span>
        </h1>

        <div
                id='about'
                class='flex flex-col gap-4'>
            <div class='font-medium text-lg text-white dark:text-gray-200'>
                I like trying out new games, apps, and random tech stuff.
                Thereâ€™s just something fun about discovering something for the first time.
            </div>

            <div class='font-medium text-lg text-white dark:text-[#fdff7a]'>
                Gaming and creating, nothing complicated.
                <div class='flex flex-wrap gap-2 mt-5'>
                    {
                        prods.map((product) => (
                                <a
                                        href={product.url}
                                        target='_blank'
                                        class='p-2 rounded-full gap-2 flex-wrap hover:rotate-1 hover:scale-105 transition-all duration-300 flex items-center justify-center bg-gray-100 hover:bg-gray-200 dark:bg-[#1F1F1F] dark:hover:bg-[#2F2F2F]'>
                                    <img
                                            src={product.image}
                                            alt={product.name}
                                            class='size-9'
                                    />
                                    <span class='mr-2'>{product.name}</span>
                                </a>
                        ))
                    }
                </div>
            </div>

            <div class='font-medium text-lg text-white dark:text-gray-200'>
                I make content when something genuinely catches my interest.<br>
                I just share the moments that feel worth showing, nothing overdone.
            </div>

            <div class='font-medium text-lg text-[#ffc852] dark:text-[#fdff7a] '>
                <span class="text-[#c7feff]">Business talk?</span>

                <a
                        href='https://cal.com/rutip/15min'
                        target='_blank'
                        class='underline underline-offset-2 hover:text-[#ffffff]'>
                    schedule a call
                </a>
                <a
                        href="https://tr.ee/biscuit"
                        target='_blank'
                        class="underline underline-offset-2 ml-4 hover:text-[#ffffff]"
                >
                    Threema
                </a>
                <a
                        href="mailto:rutip@duck.com"
                        class="underline underline-offset-2 ml-4 hover:text-[#ffffff]"
                >
                    mail
                </a>
            </div>


        </div>

        <div
                id='social-links'
                class='flex flex-row gap-6'>
            {
                socialLinks.map((link) => (
                        <a
                                href={link.url}
                                target="_blank"
                                class='text-lg font-medium text-gray-700 dark:text-white hover:text-gray-900 dark:hover:text-[#fdff7a] hover:underline underline-offset-2'>
                            {link.label}
                        </a>
                ))
            }
        </div>
    </div>
</RootLayout>
</html>
